scroll-view{
  height: 100%;
}
.user-edit{
  height: 100vh;
}
.user-edit__avatar{
  position: relative;
  margin:0 auto;
  width:120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user-edit__avatar::after{
  content:'更换';
  position: absolute;
  bottom:0;
  left:0;
  width:100%;
  text-align: center;
  padding:5rpx 0;
  color:#fff;
  font-size: 20rpx;
  background-color:rgba( 0, 0, 0, 0.5);
}

.user-edit__group{
  position: relative;
  padding:20rpx;
}
.user-edit__group::after{
  content:'';
  position: absolute;
  bottom:0;
  right:0;
  height: 1px;
  width: calc( 100% - 20rpx );
  background-color:var(--borderColor);
}
.user-edit__group--name{
  margin-right: 20rpx;
  width:4em;
  line-height: 1.4em;
}
.user-edit__group--in{
  color:#666;
}
.user-edit__group--in textarea{
  height: 5.6em;
  line-height: 1.4em;
}
.user-edit__group--btn{
  padding:10rpx 20rpx;
  color:#fff;
  font-size: 24rpx;
  background-color:var(--mainColor);
}

.user-model{
  position: fixed;
  top:0;
  left:0;
  z-index: 99;
  width:100vw;
  height: 100vh;
  /* background-color:#fff; */
}
.user-model__box{
  position: absolute;
  padding:30rpx;
  top:50%;
  left:50%;
  transform: translate(-50%, -50%);
  width: 70%;
  background-color:#fff;
  box-shadow: 0px 0px 5px #dedede;
  border-radius: 10px;
}
.user-model__title{
  font-size: 32rpx;
  font-weight: bold;
}
.user-model__intro{
  color:#666;
}
.user-model__btn{
  padding:10rpx 30rpx;
  background-color:#fff;
  color:#999;
  border:1px solid var(--borderColor);
}

.user-model__btn--confirm{
  color:#fff;
  border-color: var(--mainColor);
  background-color:var(--mainColor);
}