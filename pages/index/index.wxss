.company-logo{
  width:100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.company-name{
  font-size: 48rpx;
}
.company-address{
  color:#666;
}
.company-address__icon{
  color:var(--mainColor);
  font-size: 32rpx;
}
.company-intro{
  color:#999;
  font-size: 24rpx;
}
.company-btn{
  padding:12rpx 30rpx;
  color:var(--mainColor);
  font-size: 24rpx;
  border:1px solid var(--mainColor);
  background-color:#fff;
}
.company-btn--share{
  color:#fff;
  background-color:var(--mainColor);
}
.company-product__item{
  border-radius: 5px;
  overflow: hidden;
  margin-bottom:30rpx;
}
.company-product__item:last-child{
  margin-bottom:0;
}

.company-product__item--thumbnail{
  position: relative;
  width:100%;
  height:0;
  padding-bottom: 56.25%;
  overflow: hidden;
}
.company-product__item--thumbnail image{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height: 100%;
}
.company-product__item--title{
  font-size: 28rpx;
  line-height: 1.4;
  max-height: 2.8em;
  overflow: hidden;
}
.company-product__item--price{
  color:var(--secondColor);
  font-size: 32rpx;
  font-weight: bold;
}
.company-product__item--price::before{
  content:'ï¿¥';
  font-size: 24rpx;
}
.company-product__item--btn{
  padding:10rpx 25rpx;
  color:#fff;
  font-size: 24rpx;
  background-color:var(--mainColor);
}