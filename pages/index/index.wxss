page{
  overflow-x: hidden;
  background-color: #fff;
}
scroll-view{
  position: relative;
  height: 100vh;
}
.home{
  width: 100%;
  overflow: hidden;
}
.company{
  position: relative;
}
.company-hd{
  border-radius: 10px;
  overflow: hidden;
  background-color: rgba(255, 255,255, 0.96);
}
.company-logo{
  width:140rpx;
  border-radius: 50%;
  overflow: hidden;
}
.company-name{
  font-size: 48rpx;
}
.company-address{
  color:#666;
}
.company-address__icon{
  color:var(--mainColor);
  font-size: 32rpx;
}
.company-intro{
  color:#999;
  font-size: 24rpx;
  height: 2.6em;
  line-height: 1.3em;
  overflow: hidden;
}
.company-btn{
  padding:12rpx 30rpx;
  color:var(--mainColor);
  font-size: 24rpx;
  border:1px solid var(--mainColor);
  background-color:#fff;
}
.company-btn--share{
  color:#fff;
  background-color:var(--mainColor);
}
.company-banner swiper{
  height: 260rpx;
}
.company-banner__item image{
  height: 260rpx;
  border-radius: 10px;
  overflow: hidden;
}
.company-product__hd{
  background-color:#f5f5f5;
}
.company-product__hd--icon{
  color:var(--mainColor);
  font-size: 36rpx;
}
.company-product__title{
  font-size: 32rpx;
}
.company-product__small{
  color:#999;
  font-size: 24rpx;
}