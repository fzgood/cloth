  height: 300rpx;
  overflow: hidden;
}
.home-category__item--name{
  color:#464646;
}
.home-recommend__title{
  padding-left:20rpx;
  font-size: 32rpx;
  line-height: 1;
  border-left: 3px solid var(--mainColor);
}