page{
  overflow-x: hidden;
  background-color: #fff;
}
scroll-view{
  position: relative;
  height: 100vh;
}
.home{
  width: 100%;
  overflow: hidden;
}
.company{
  position: relative;
}
.company-hd{
  border-radius: 10px;
  overflow: hidden;
  background-color: rgba(255, 255,255, 0.96);
}
.company-logo{
  width:140rpx;
  border-radius: 50%;
  overflow: hidden;
}
.company-name{
  font-size: 48rpx;
}
.company-address{
  color:#666;
}
.company-address__icon{
  color:var(--mainColor);
  font-size: 32rpx;
}
.company-intro{
  color:#999;
  font-size: 24rpx;
  height: 2.6em;
  line-height: 1.3em;
  overflow: hidden;
}
.company-btn{
  padding:12rpx 30rpx;
  color:var(--mainColor);
  font-size: 24rpx;
  border:1px solid var(--mainColor);
  background-color:#fff;
}
.company-btn--share{
  color:#fff;
  background-color:var(--mainColor);
}
.company-banner swiper{
  height: 260rpx;
}
.company-banner__item image{
  height: 260rpx;
  border-radius: 10px;
  overflow: hidden;
}
.company-product__hd{
  background-color:#f5f5f5;
}
.company-product__hd--icon{
  color:var(--mainColor);
  font-size: 36rpx;
}
.company-product__title{
  font-size: 32rpx;
}
.company-product__small{
  color:#999;
  font-size: 24rpx;
}
.company-product__item{
  border-radius: 5px;
  overflow: hidden;
  margin-bottom:60rpx;
}
.company-product__item:last-child{
  margin-bottom:0;
}

.company-product__item--thumbnail{
  position: relative;
  width:100%;
  height:0;
  padding-bottom: 56.25%;
  border-radius: 10px;
  overflow: hidden;
}
.company-product__item--hots{
  position: absolute;
  top: 0rpx;
  left: 0;
  padding: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 20rpx;
  background-color: var(--secondColor);
  transform: rotate(-45deg) translate(-30%, -120%);
  width: 300rpx;
}
.company-product__item--thumbnail image{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height: 100%;
}
.company-product__item--title{
  font-size: 32rpx;
}
.company-product__item--intro{
  color:#666;
  font-size: 24rpx;
  max-height: 2.8em;
  line-height: 1.4em;
}
.company-product__item--price{
  color:var(--secondColor);
  font-size: 38rpx;
  font-weight: bold;
}
.company-product__item--price::before{
  content:'ï¿¥';
  font-size: 24rpx;
}
.company-product__item--number{
  padding-right:20rpx;
  margin-right:20rpx;
  color:#464646;
  font-size: 24rpx;
  line-height: 1;
  border-right: 1px solid var(--borderColor);
}
.company-product__item--number:last-child{
  padding-right:0;
  margin-right:0;
  border-right: 0;
}
.company-product__item--number text{
  margin-left:10rpx;
  color:#333;
  font-weight: bold;
}
.company-product__item--btn{
  padding:12rpx 55rpx;
  color:#fff;
  font-weight: bold;
  background-color:var(--mainColor);
}