.c-apply{
  position: fixed;
  top:0;
  left:0;
  width: 100vw;
  height: 100vh;
  z-index: 999;
}
.c-apply__mask{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height: 100%;
  background-color:rgba(0, 0, 0, 0.6);
}

.c-apply__box{
  position: absolute;
  bottom:0;
  left:0%;
  width: 100%;
  padding:60rpx;
  background-color:#fff;
  border-radius:10px 10px 0 0 ;
  transform: translateY(0%);
  transition: all 0.5s ease;
}
.c-apply__box--active{
  transform: translateY(100%);
}
.c-apply__bd{
  margin-top:60rpx;
}
.c-apply__title{
  font-size: 32rpx;
  font-weight: bold;
}

.c-apply__item--image{
  width: 50rpx;
  max-height: 50rpx;
}
.c-apply__item--intro{
  color:#999;
  font-size: 24rpx;
}

.c-apply__ft{
  margin-top:60rpx;
}
