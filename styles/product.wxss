
.product-item{
  margin-bottom:30rpx;
  background-color:#fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0px 4px 8px #dedede;
}
.product-item:last-child{
  margin-bottom:0;
}
.product-item__thumbnail{
  width: 200rpx;
  box-shadow: 0px 0px 4px #dedede;
  border-radius: 5px;
  overflow: hidden;

}
.product-item__title{
  font-size: 32rpx;
  line-height: 1.4;
  -webkit-line-clamp: 2;
}
.product-item__type{
  color:var(--assist1);
  font-size: 24rpx;
}
.product-item__type image{
  width:32rpx;
}
.product-item__min{
  color:#999;
  font-size: 24rpx;
}
.product-item__price{
  color:var(--secondColor);
  font-size: 32rpx;
}
.product-item__params{
  color:#999999;
}
.product-item__join{
  padding:14rpx 50rpx;
  color:#fff;
  text-align: center;
  background-color:var(--assist1);
  border-radius: 5px;
  overflow: hidden;
}
.product-item__join--hover{
  opacity: 0.9;
}
.product-item__detail{
  padding:10rpx 20rpx;
  color:#999999;
  font-size: 24rpx;
  border:1px solid var(--borderColor);
  border-radius: 5px;
}