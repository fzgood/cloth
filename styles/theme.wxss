/*重置表单*/
textarea{
  width:100%;
  box-sizing: border-box;
}
.publish-value{
  font-size: 30rpx;
}
.publish-value--placeholder{
  color:#808080;
}

/*背景*/
.bg-white{background-color:#fff;}
.bg-black{background-color:#000;}
.bg-mainColor{background-color: var(--mainColor);}
/*文字定位*/
.text-left{text-align: left;}
.text-center{text-align: center;}
.text-right{text-align: right;}

/*文本placeholder样式*/
.placeholder{
  color:#808080;
  font-size: 28rpx;
}
/*行内块*/
.inline-block{
  display: inline-block;
  vertical-align: middle;
}