@import "variable.wxss";
@import "flex.wxss";
/*正方形*/
.square{
  position: relative;
  height:0;
  width:100%;
  padding-bottom:100%;
}
image, video{
  width: 100%;
  vertical-align: middle;
}
.user-avatar{
  position: relative;
  width:96rpx;
  height: 96rpx;
  overflow: hidden;
  border-radius: 50%;
}
.goods-thumbnail{
  position: relative;
  height:0;
  padding-bottom:100%;
}
.user-avatar image, 
.goods-thumbnail image{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
}
.thumbnail-close{
  position: absolute;
  top:0;
  right:0;
  font-size: 48rpx;
  color:var(--mainColor);
}
.video-box{
  position: relative;
  width:100%;
  height:0;
  padding-bottom:56.25%;
  background-color:#000;
}
.video-box video,
.video-box image{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
}
.image-full{
  width:100%;
  height:100%;
  object-fit: cover;
}
.video-full{
  width:100%;
  height:100%;
}
/*图片上传*/
.upload-image{
  position: relative;
  height:0;
  background-color:#f5f5f5;
  padding-bottom:100%;
  border-radius: 5px;
}
.upload-image .iconfont{
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%, -50%);
  font-size: 48rpx;
}
/*视频播放样式*/
.player-box{
  position: relative;
}
.player-box__btn{
  position: absolute;
  top:50%;
  left:50%;
  width:80rpx;
  height:80rpx;
  line-height:80rpx;
  text-align: center;
  color:#fff;
  font-size: 48rpx;
  transform:translate(-50%, -50%);
  background-color: rgba(0,0,0,0.5);
  border-radius: 50%;
}

/*省略号*/
.text-wrap{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.many-wrap{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/*按钮*/
.clearButton{
  display: block;
  padding:0;
  line-height: 1.4;
  font-size: 28rpx;
}
.clearButton::after{
  display: none;
}
.mainButton,
.mainButton--sx{
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  color:var(--mainColor);
  font-size: 28rpx;
  border:1px solid var(--mainColor);
}
.mainButton--default{
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
}
.mainButton--sx{
  color:#fff;
  background-color:var(--mainColor);
}
.mainButton.button-hover{
  color:#fff;
  background-color:var(--mainColor);
}
.mainButton--sx.button-hover{
  opacity:0.9;
}
.round{
  border-radius: 25px;
}

/*块居中*/
.margin-center{
  margin:0 auto; 
}
/*去边距*/
.no-margin{margin:0 !important;}
.no-margin-top{margin-top:0 !important;}
.no-margin-right{margin-right:0 !important;}
.no-margin-bottom{margin-bottom:0 !important;}
.no-margin-left{margin-left:0 !important;}
.no-padding{padding:0 !important;}
.no-padding-top{padding-top:0 !important;}
.no-padding-right{padding-right:0 !important;}
.no-padding-bottom{padding-bottom:0 !important;}
.no-padding-left{padding-left:0 !important;}

